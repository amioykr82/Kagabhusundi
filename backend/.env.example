# Application Configuration
APP_NAME=Kagabhushundi
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database Configuration (Development - SQLite)
DATABASE_URL=sqlite:///./kagabhushundi.db

# Database Configuration (Production - Supabase PostgreSQL)
# DATABASE_URL=postgresql://postgres:your_password@your_supabase_project.supabase.co:5432/postgres

# Authentication & Security
SECRET_KEY=kagabhushundi-jwt-secret-2024-super-secure-change-in-production-xyz123
JWT_SECRET_KEY=kagabhushundi-auth-token-secret-key-2024
